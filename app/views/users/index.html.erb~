<% title t('.title_html') %>
<h1><%= t('.title_html') %></h1>

<table class="table">
  <tr>
    <th><%= t('.username') %></th>
    <th><%= t('.email') %></th>
    <th><%= t('.show') %></th>
    <th><%= t('.cert_list') %></th>
    <th><%= t('.edit') %></th>
    <th><%= t('.block') %></th>
    <th><%= t('.destroy') %></th>
  </tr>

  <% @users.each do |user| %>
    <% if !user.roles.find_by_name("admin") %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= link_to t('.show_user'), user %></td>
        <td>
        <% if user.certificates.count>0 %>
          <%= link_to t('.user_cert_list'), certificates_path(:user_id => user.id) %>
        <% end %>
        </td>
        <td><%= link_to t('.edit_user'), edit_user_path(user) %></td>
        <% if !user.banned %>
          <td><%= link_to t('.block_user'), bann_usr_url(:id => user.id), :confirm => t('.confirm') %></td>
        <% else %>
          <td><%= link_to t('.unblock_user'), unbann_usr_url(:id => user.id), :confirm => t('.confirm') %></td>
        <% end %>
        <td><%= link_to t('.destroy_user'), user, :confirm => t('.confirm'), :method => :delete %></td>
      </tr>
    <% end %>
  <% end %>
</table>

<h1><%= t('.admin_list') %></h1>
<table class="table">
  <tr>
    <th><%= t('.username') %></th>
    <th><%= t('.email') %></th>
    <th><%= t('.show') %></th>
    <th><%= t('.edit') %></th>
    <th><%= t('.block') %></th>
    <th><%= t('.destroy') %></th>
  </tr>

  <% @users.each do |user| %>
    <% if !!user.roles.find_by_name("admin") %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= link_to t('.show_user'), user %></td>
        <td><%= link_to t('.edit_user'), edit_user_path(user) %></td>
        <% if current_user.username!=user.username %>
          <% if !user.banned %>
            <td><%= link_to t('.block_user'), bann_usr_url(:id => user.id), :confirm => t('.confirm') %></td>
          <% else %>
            <td><%= link_to t('.unblock_user'), unbann_usr_url(:id => user.id), :confirm => t('.confirm') %></td>
          <% end %>
          <td><%= link_to t('.destroy_user'), user, :confirm => t('.confirm'), :method => :delete %></td>
        <% end %>
      </tr>
    <% end %>
  <% end %>
</table>
